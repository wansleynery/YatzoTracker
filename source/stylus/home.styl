:root

    body

        #container

            #homeApp
                float: left
                width: 100%
                height: 100%
                overflow: hidden

                #homeBackgroud
                    float: left
                    width: 100%
                    height: 800px
                    background-image: url('/res/image/women-in-science-l.jpg')
                    background-repeat: no-repeat
                    background-size: cover

                    #homeCentralContainer
                        float: left
                        margin-left: calc(50% - 250px)
                        width: 500px
                        height: 100%
                        background-color: rgba(255, 255, 255, 1)

                        #homeCentralTopMinorContainer
                            float: left
                            height: 350px
                            width: 100%

                            #homeTitle
                                float: left
                                margin: 20px 30px 0
                                text-align: center
                                width: calc(100% - 60px)
                                height: 80px
                                line-height: 40px

                            #homeSubtitle
                                float: left
                                margin: 0 30px
                                text-align: center
                                width: calc(100% - 60px)
                                height: 40px
                                line-height: 20px

                            #globeSpinImg
                                float: left
                                margin: 20px 0
                                margin-left: calc(50% - 100px)
                                width: 200px
                                height: 200px
                                background-repeat: no-repeat
                                background-size: contain
                                opacity: .6

                        #homeCentralBottomMinorContainer
                            float: left
                            height: 450px
                            width: 100%

                            .homeSelect
                                height: 50px
                                width: 80%
                                font-size: 17px
                                line-height: 20px
                                margin: 15px 10%
                                padding: 0 15px

                                option
                                    height: 40px
                                    line-height: 40px
                                    width: 100%

                            #homeSubmit
                                float: left
                                margin-left: calc(50% - 150px)
                                margin-top: 20px
                                width: 300px
                                height: 50px
                                border-radius: 4px
                                background-color: rgba(0, 0, 0, .4)
                                box-shadow: 0px 0px 5px rgba(0, 0, 0, .2)
                                text-align: center
                                line-height: 50px
                                cursor: pointer
                                transition: .3s linear

                                &:hover
                                    background-color:  rgba(0, 0, 0, .2)
                                    box-shadow: 0px 0px 5px rgba(0, 0, 0, 1)

                        .selectLabel
                            margin: 10px 40px 0